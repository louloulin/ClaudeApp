{
  "appId": "com.claudecode.app",
  "webDir": "dist",
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#3b82f6",
      "showSpinner": false,
      "androidSpinnerStyle": "large",
      "iosSpinnerStyle": "small",
      "spinnerColor": "#ffffff",
      "splashFullScreen": true,
      "splashImmersive": true
    },
    "StatusBar": {
      "style": "default",
      "backgroundColor": "#3b82f6"
    },
    "Haptics": {
      "enabled": true
    },
    "Network": {
      "enabled": true
    },
    "Filesystem": {
      "enabled": true
    }
  },
  "appName": "Claude Code UI (Dev)",
  "server": {
    "url": "http://localhost:3008",
    "cleartext": true,
    "androidScheme": "http",
    "allowNavigation": [
      "localhost:*",
      "127.0.0.1:*"
    ]
  }
}