{
  "appId": "com.claudecode.app",
  "appName": "Claude Code UI",
  "webDir": "dist",
  "server": {
    "androidScheme": "https"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#3b82f6",
      "showSpinner": false,
      "androidSpinnerStyle": "large",
      "iosSpinnerStyle": "small",
      "spinnerColor": "#ffffff",
      "splashFullScreen": true,
      "splashImmersive": true
    },
    "StatusBar": {
      "style": "default",
      "backgroundColor": "#3b82f6"
    },
    "Haptics": {
      "enabled": true
    },
    "Network": {
      "enabled": true
    },
    "Filesystem": {
      "enabled": true
    }
  }
}
